{
  "name": "node-circuit-breaker",
  "version": "0.1.1",
  "description": "Circuit Breaker: Decorators and tools that can easily apply the Circuit Breaker pattern.",
  "homepage": "https://github.com/kibae/node-circuit-breaker",
  "repository": {
    "type": "git",
    "url": "https://github.com/kibae/node-circuit-breaker.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run build; cp dist/circuit-breaker-worker.js src/; jest",
    "test:watch": "jest --watch",
    "build": "tsc -p tsconfig.build.json",
    "publish": "rm -rf dist/* ; npm run build && npm publish --access public"
  },
  "keywords": [
    "Circuit Breaker",
    "Circuit",
    "Breaker",
    "Fast Fail",
    "Decorator",
    "hystrix",
    "resilience4j",
    "nodejs",
    "typescript"
  ],
  "author": "Kibae Shin <kibae.shin@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@nestjs/common": "^11.1.5",
    "@types/jest": "^28.1.3",
    "axios": "^1.11.0",
    "jest": "^28.1.3",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.25",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
